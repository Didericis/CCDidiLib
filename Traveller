--Author: Didericis

os.loadAPI('./Turner')
os.loadAPI('./RevDir')
os.loadAPI('./Digger')

local function goPriv(dir, len, dig)
  local loopNum=1

  if not len then
    len=1
  end

  if not dig then
    dig=false
  end

  if (dig and Turner.isTurnDirS(dir)) or Turner.isTurnDir(dir) then
    Turner.turn(dir)
    dir='forward'
  end

  for i=1,len do
    local success=false

    while not success do
      loopNum=loopNum+1

      if loopNum>100 then
        error('Turtle stuck')
      end

      if dig then
        Digger.dig(dir)
      end

      if not dir or dir=='forward' then
        success=turtle.forward()
      elseif dir=='back' then
        success=turtle.back()
      elseif dir=='up' then
        success=turtle.up()
      elseif dir=='down' then
        success=turtle.down()
      else
        error('Unkown movement direction '..dir)
      end
    end
  end
end

function go(dir, len)
  goPriv(dir, len, false)
end

function goDig(dir, len)
  goPriv(dir, len, true)
end

function isTurnDir(dir)
  if dir=='left' or dir=='right' then
    return true
  else
    return false
  end
end

function isTurnDirS(dir)
  if isTurnDir(dir) or dir=='back' then
    return true
  else
    return false
  end
end

function turn(dir)
  if dir=='right' then
    turtle.turnRight()
  elseif dir=='left' then
    turtle.turnLeft()
  elseif dir=='back' then
    turtle.turnLeft()
    turtle.turnLeft()
  else
    error('No turn direction '..dir)
  end
end

function shift(dir, len)
  if (not (dir=='right')) and (not (dir=='left')) then
    error('Can only shift right or left, not '..dir)
  end

  go(dir, len)
  turn(RevDir.rev(dir))
end